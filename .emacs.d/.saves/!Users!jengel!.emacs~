(add-to-list 'load-path "/Users/jengel/Documents/emacs/")

;; Visual-line mode (word-wrapping)
;(global-visual-line-mode t)

;; Divert autosaves
(setq backup-directory-alist `(("." . "~/.saves")))

;; turn on auto-pair mode
(require `autopair)
(autopair-global-mode)

;; hopefully this should make autopair work with dollar signs
(add-hook 'LaTeX-mode-hook
          #'(lambda ()
              (modify-syntax-entry ?$ "\"")))

;; enable auto-wrap for AutoPair
(setq autopair-autowrap t)

(add-hook 'LaTeX-mode-hook 'flyspell-mode)

(add-hook 'LaTeX-mode-hook 'LaTeX-math-mode)

(add-hook `LaTeX-mode-hook `turn-on-reftex)
(setq reftex-plug-into-auctex t)


;;Things to make pdf syncing work between aquaemacs and skim
;; The following only works with AUCTeX loaded
(require 'tex-site)
(add-hook 'TeX-mode-hook
    (lambda ()
        (add-to-list 'TeX-output-view-style
            '("^pdf$" "."
              "/Applications/Skim.app/Contents/SharedSupport/displayline %n %o %b")))
)

;; Use PDF mode by default
(setq-default TeX-PDF-mode t)

;; Make emacs aware of multi-file projects
(setq-default TeX-master nil)

;;Use ZenBurn Theme
(add-to-list 'custum-theme-load-path "~/.emacs.d/themes/")